  head
    title Connect Works !
    link(rel='shortcut icon', href='./../../public/images/favicon.ico', type='image/png')
    
    style(type='text/css').
      #chartdiv {
      width		: 100%;
      height	: 600px;
      font-size	: 5px;
      align:left;
      }
      #chartdiv a {
      font-size: 0!important;
      }
      .bs-example{
      margin: 20px;
      }
      .connect{
      font-family: monaco, Consolas, 'Lucida Console', monospace;
      font-size: 15px;
      }
    
    // CSS  
                    
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    
    // JS
    script(type='text/javascript', src='https://code.jquery.com/jquery-1.11.1.min.js')    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
    script(type='text/javascript', src='http://www.amcharts.com/lib/3/amcharts.js')
    script(type='text/javascript', src='http://www.amcharts.com/lib/3/serial.js')
    script(type='text/javascript', src='http://www.amcharts.com/lib/3/themes/none.js')
    
    script.
      var chart = AmCharts.makeChart("chartdiv", {
      "type": "serial",
      "theme": "none",
      "pathToImages":"http://www.amcharts.com/lib/3/images/",
      "dataProvider":
      !{(JSON.stringify(data))},
      "startDuration": 1,
      "graphs": [{
      "balloonText": "<b>[[category]]: [[value]]</b>",
      "colorField": "color",
      "fillAlphas": 0.9,
      "lineAlpha": 0.2,
      "type": "column",
      "valueField": "Alarams"
      }],
      "chartCursor": {
      "categoryBalloonEnabled": false,
      "cursorAlpha": 0,
      "zoomable": false
      },
      "categoryField": "client",
      "categoryAxis": {
      "gridPosition": "start",
      "labelRotation": 45,
      "gridThickness":1,
      "inside":false,
      "gridCount":20,
      "autoGridCount":false,
      "title":"CLIENT MNEMONIC"
      },
      "ChartScrollbarSettings" :{
      "autoGridCount":true,
      "position":top
      },
      "titles": [
      {
      "text": "ALARM BAR GRAPH",
      "size": 15
      }
      ],
      "valueAxes": [
      {
      "title": "ALARMS (max value is maximum alarm)",
      "axisThickness":1,
      "labelFrequency":1,
      "autoGridCount":false,
      "dashLength":10,
      "minimum":0,
      "maximum":50
      }
      ],
      "legend": {
      "useGraphSettings": true
      }
      });
      
